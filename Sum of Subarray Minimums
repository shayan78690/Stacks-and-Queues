class Solution {
    public int sumSubarrayMins(int[] arr) {
        int mod = 1_000_000_007;
        int sum = 0;
        for(int i = 0; i < arr.length; i++) {
            int min = arr[i];
            for(int j = i; j < arr.length; j++) {
                min = Math.min(arr[j], min);
                sum = (sum + min) % mod;
            }
        }
        return sum;
    }
}
